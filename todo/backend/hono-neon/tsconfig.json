{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "declaration": true,
    "strict": true,
    "lib": ["es2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "types": ["node"],
    "skipLibCheck": true,

    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "@/*": ["src/*"]
    }
  },

  "include": ["src"],
  "exclude": ["node_modules/**/*", ".wrangler/**/*", "dist/**/*"],
  "tsx": {
    "require": ["tsconfig-paths/register"]
  }
}
